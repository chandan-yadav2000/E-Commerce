@model IList<Forms.tbl_Mvc>


@{
    ViewBag.Title = "Profile";
}


<style>
    label {
        color: black;
        font-family: Comic Sans MS;
        font-size: 18px;
    }


    a {
        color: white;
        text-decoration: none;
    }

   input {
        display: block;
        width: 100%;
        height: 34px;
        padding: 6px 12px;
        font-size: 14px;
        line-height: 1.42857143;
        color: black;
        background-color: #fff;
        background-image: none;
        border: 1px solid #ccc;
        border-radius: 4px;
       font-weight:bold;
    }

    #radio {
        display: inline-block;
        width: 80%;
        height: 24px;
        margin-left: -60px;
        border: none;
        outline: none;
        border-block-color: none;
    }

    #radiolabel {
        margin-left: -120px;
        font-size: 24px;
    }

    .error {
        color: red;
    }

    *.disabled {
        cursor: not-allowed;
    }

    body {
        background-color: cadetblue;
    }
</style>

<h3 style="text-align:center"><b>User-Profile:- @User.Identity.Name</b></h3>

@foreach (var item in Model)
{


    <div class="container">

        <div class="row">
            <label>Name</label><br/>
            <input type="text" value="@item.Name" /><br />

        </div>

        <div class="row">
            <label>LastName</label><br />
          <input type="text" id="text" value="@item.LastName" /><br />
        </div>

        <div class="row">

            <label>Gender</label><br />
            <input type="text" id="text" value="@item.Gender" /><br />
        </div>

        <div class="row">
            <label>Age</label><br />
            <input type="text" id="text" value="@item.Age" /><br />

        </div>

        <div class="row">
            <label>MobileNo</label><br />
            <input type="text" id="text" value="@item.MobileNo" /><br />
        </div>

        <div class="row">
            <label>Email</label><br />
            <input type="text" id="text" value="@item.Email" /><br />
        </div>

        <div class="row">
            <label>Address</label><br />
            <input type="text" id="text" value="@item.Address" /><br />
        </div>

        <div class="row">
            <label>Username</label><br />
            <input type="text" id="text" value="@item.Username" /><br />
        </div>

        <div class="row">
            <label>Password</label><br />
            <input type="text" id="text" value="@item.Password" disabled /><br />
        </div>

        <div class="row">
            <button type="submit" class="btn btn-success">Update</button>
            <button type="reset" class="btn btn-danger">CANCEL</button>
         <button type="submit" class="btn btn-primary" >@Html.ActionLink("Back","Dashboard","Login") </button>
</div>


    </div>

}
